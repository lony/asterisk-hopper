{
  "manifest_version": 2,
  "name": "Asterisk Hopper",
  "description": "This extension avoids special pages via regex-redirects.",
  "version": "1.3",
  "icons": { "128": "asterisk-hopper-29.png" },
  "background": { "scripts": ["background.js"] },
  "permissions": [
	"tabs",
	"webRequest",
	"webRequestBlocking",
	"*://*.facebook.com/*",
	"*://*.youtube.com/*"
  ],
  "page_action": {
      "default_name": "Facebook Hopper",
      "default_icon": "asterisk-hopper-29.png"
  }
}